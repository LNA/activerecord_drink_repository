<style>
.guest {
  font-size: 50 ;
  font-weight: bold;
  padding-left: 70px;
}

.box {
  width:150px;
  height:50px;
  border:1px solid black;
  font-size: 20 ;
  font-weight:bold;
  text-align:center;


}
td, th {
  border: 1px solid #999;
  padding: 0.5rem;
  text-align: left;
}

</style>
<div class="guest">
  <p>  
    <%= @guest.first_name%>  <%= @guest.last_name %>  
  </p>
</div>


<div class="box">
  <p>
    Orders
  </p>
</div>
  <table>
    <thead>
      <tr>
        <th>Drink Name</th>
        <th>Quantity</th>
        <th>     +     </th>
        <th>     /     </th>
        <th>     -   </th>
      </tr>
    </thead>

    <tbody>
  <tr>

  <% @guest.orders.each do |order| %>

    <td><%= order.drink.name %></td>
    <td><%= order.quantity %></td>

    <td>
      <form action="/orders/<%= @guest.id %>/<%= order.drink.id %>" method="post">
      <input type="hidden" name="_method" value="put">
      <input type="hidden" name="order.drink.id" value= <%= order.quantity%>>  
      <input type="submit" value="Reorder">  
      </form>
    </td>  

    <td></td>

    <td>
      <form action="/orders/<%= @guest.id %>/<%= order.drink.id %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="hidden" name="order.drink.id" value= <%= order.quantity%>>  
      <input type="submit" value="Void">  
      </form>
    </td>  
  </tr>

    <% end %>
  </tbody>
  </table>

<div class="box">
  <p>
    Drinks
  </p>
</div>
  <dl>
  <% @drinks.keys.sort.each do |starting_letter| %>
    <% @drinks[starting_letter].each do |drink| %>
        <dt>

        <%= drink.name %>
        <dd><form action="/orders/<%= @guest.id %>/<%= drink.id %>" method="post">
        <input type="hidden" name="_method" value="put">
  	    <input type="hidden" name="drink_id" value= <%= drink.id%>>  
  	    <input type="submit" value="Order">  
       </form> </dd>
     </dt>
    <% end %>
  <% end %>
</dl>

<p>
  <a href="/guests/new">Add A New Guest</a>
</p>
<p>
  <a href="/guests">See All Guests</a>
</p>

<p>
  <a href="/guest/<%= @guest.id %>/edit">Edit This Guest</a>
</p>

<form action="/guest/<%= @guest.id %>" method="post">  
<input type="hidden" name="_method" value="delete">  
<input type="submit" value="Delete This Guest!">  
</form>