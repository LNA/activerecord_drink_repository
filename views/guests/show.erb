<style>
.guest {
  font-size: 50 ;
  font-weight: bold;
  padding-left: 70px;
}

.box {
  width:350px;
  height:100px;
  border:1px solid black;
  font-size: 25 ;
  font-weight:bold;
  text-align:center;

}
</style>
<div class="guest">
  <p>  
    <%= @guest.first_name%>  <%= @guest.last_name %>  
  </p>
</div>


<div class="box">
  <p>
    Orders
  </p>
</div>

 
  <ul>
  <% @guest.orders.each do |order| %>
  <li>
    <%= order.drink.name %>
    <%= order.quantity %>
    <form action="/orders/<%= @guest.id %>/<%= order.drink.id %>" method="post">
      <input type="hidden" name="_method" value="put">
      <input type="hidden" name="order.drink.id" value= <%= order.quantity%>>  
      <input type="submit" value="Reorder">  
    </form>  
    <form action="/orders/<%= @guest.id %>/<%= order.drink.id %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="hidden" name="order.drink.id" value= <%= order.quantity%>>  
      <input type="submit" value="Void">  
    </form>  
  </li>
    <% end %>
  </ul>
</p>

<div class="box">
  <p>
    Drinks
  </p>
</div>

  <ul>
  <% @drinks.each do |drink| %>
    <li>
      <%= drink.name %> - <%= drink.booze %> - 
      <%= drink.mixer %> - <%= drink.glass %>
     <form action="/orders/<%= @guest.id %>/<%= drink.id %>" method="post">
      <input type="hidden" name="_method" value="put">
	    <input type="hidden" name="drink_id" value= <%= drink.id%>>  
	    <input type="submit" value="Yes, Add this drink!">  
    </form>  
    </li>
  <% end %>
 </ul>
</p>  
<p>
  <a href="/guests/new">Add A New Guest</a>
</p>
<p>
  <a href="/guests">See All Guests</a>
</p>

<p>
  <a href="/guest/<%= @guest.id %>/edit">Edit This Guest</a>
</p>

<form action="/guest/<%= @guest.id %>" method="post">  
<input type="hidden" name="_method" value="delete">  
<input type="submit" value="Delete This Guest!">  
</form>